	cout << "3) Перезапись второй строки в первую\n";
	cout << "4) Удаление 1-ой строки\n";
	cout << "5) Сравнивание строк\n";
	do {
		key = _getch();
		if (key == 224)
		{
			key = _getch();
			if (flag > 5) flag = 5;
			if (flag < 1) flag = 1;
			if (key == 80) flag++;
			if (key == 72) flag--;
		}
		switch (flag) {
		case 1:
			system("cls");
			cout << "1) изменение 1-ой строки" << "  <-\n";
			cout << "2) Копирование строки в строку\n";
			cout << "3) Перезапись второй строки в первую\n";
			cout << "4) Удаление 1-ой строки\n";
			cout << "5) Сравнивание строк\n";
			break;
