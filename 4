	case 2:
	 j = dlina(st1);

		for (unsigned i = 0; st2[i]; ++i, ++j)

			st1[j] = st2[i];

		st1[++j] = '\0';
			cout << p;
		break;
	case 3:
		for (unsigned i = 0; st2[i]; ++i)

			st1[i] = st2[i];

		cout << p;
