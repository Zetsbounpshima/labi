#include <iostream>
#include <conio.h>
using namespace std;

unsigned dlina(char* str) {
	unsigned L = 0;

	while (str[L])
		L++;
	return L;
}

int main() {
	setlocale(LC_ALL, "Russian");
	int key = 0;
	int flag = 1;
